rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: Permitir lectura y escritura a usuarios autenticados
    match /users/{userId} {
      allow read: if true; // Permitir leer perfiles (ej: buscar atletas)
      allow create, update: if true; // Temporalmente abierto para desarrollo y onboarding
      allow delete: if false; // Nadie borra por ahora
    }

    // Exercises: Created by coaches
    match /exercises/{exerciseId} {
      // Anyone authenticated can read exercises (athletes need to see them)
      allow read: if isAuthenticated();
      // Only the coach who owns it can update/delete
      allow create: if isAuthenticated() && request.resource.data.coachId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Routines: Created by coaches
    match /routines/{routineId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.coachId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
